[user]
  name = {{ .name }}
  email = git@lars-francke.dec
  signingkey = {{ .chezmoi.homeDir }}/.ssh/id_ed25519.pub

[alias]
  l = log --oneline -n 20 --graph
  s = status -s

[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = auto

[core]
  excludesfile = ~/.gitignore
  autocrlf = input

[svn]
  rmdir = true

[push]
  default = simple
  gpgSign = if-asked

[pull]
  rebase = true

[rerere]
  enabled = true

[init]
  defaultBranch = main

[commit]
  gpgsign = true

[gpg]
  format = ssh

[tag]
  gpgsign = true

[gpg "ssh"]
  allowedSignersFile = ~/.ssh/allowed_signers

[merge]
  conflictStyle = zdiff3

{{ if eq .chezmoi.os "darwin" -}}
[credential]
  helper = osxkeychain
{{ end -}}
